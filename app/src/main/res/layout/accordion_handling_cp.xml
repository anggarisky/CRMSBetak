<?xml version="1.0" encoding="utf-8"?>
<com.example.crmsbeta.widget.AccordionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_each_accordion"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_16sdp"
    app:header_layout_fold_button_id="@id/foldButton"
    app:header_layout_id="@layout/layout_header_accordian"
    app:header_layout_label_id="@id/tvHeaderTitle"
    app:section_bottom="@layout/accordion_footer"
    app:section_container="@layout/accordion_section"
    app:section_container_parent="@id/section_content"
    app:section_headers="@array/accordion_cp_handling"
    tools:showIn="@layout/fragment_caseparticulars">


    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Complaint Date -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Date of Complaint (DDMMYYYY)"
            android:textColor="#8a000000"
            android:textSize="@dimen/_14ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleComplaintDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:padding="@dimen/_8sdp"
                android:text="09/12/2018"
                android:textColor="#de000000" />

            <ImageView
                android:id="@+id/btnComplaintDate"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/bg_icon_input"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_date_range_20dp" />
        </LinearLayout>


        <!-- Receipt Date -->

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Date of Receipt (DDMMYYYY)"
            android:textColor="#8a000000"
            android:textSize="@dimen/_14ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleReceiptDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:padding="@dimen/_8sdp"
                android:text="09/12/2018"
                android:textColor="#de000000" />

            <ImageView
                android:id="@+id/btnReceiptDate"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/bg_icon_input"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_date_range_20dp" />
        </LinearLayout>


        <!--Interim Reply Due Date	-->

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Interim Reply Due Date"
            android:textColor="#8a000000"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:focusable="false"
            android:text="N/A"
            android:textColorHint="#40000000"
            android:background="@drawable/et_accordion_disabled"
            android:paddingLeft="@dimen/_6sdp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp" />

        <!--Substantive Reply Due Date-->

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Substantive Reply Due Date"
            android:textColor="#8a000000"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:focusable="false"
            android:text="N/A"
            android:textColorHint="#40000000"
            android:background="@drawable/et_accordion_disabled"
            android:paddingLeft="@dimen/_6sdp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp" />

        <!--Close Date-->

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Close Date"
            android:textColor="#8a000000"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:focusable="false"
            android:text="N/A"
            android:textColorHint="#40000000"
            android:background="@drawable/et_accordion_disabled"
            android:paddingLeft="@dimen/_6sdp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/roboto"
            android:text="* required field"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>


</com.example.crmsbeta.widget.AccordionView>